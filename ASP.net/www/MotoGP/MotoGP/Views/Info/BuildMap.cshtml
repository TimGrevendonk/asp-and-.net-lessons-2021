@model IEnumerable<MotoGP.Models.Race>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    // var races = (List<Race>)ViewData["races"];
}

<style>
    .centered {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
</style>

<img src="/images/banners/map.png" usemap="#Workmap"/>
    
<map name="Workmap">
    @foreach (var item in Model)
    {
        <area shape="circle" coords="@item.X, @item.Y, 20" alt="@item.Name" href="@Url.Action("ShowRace", "info", new {id = item.RaceID})">
    }
</map>

<a asp-controller="Home" asp-action="Index">Back</a>
