@model MotoGP.Models.Ticket
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    table {
        width: 100%;
        border: 1px solid;
        border-collapse: collapse;
        text-align: center;
    }
    th{
        background-color: lightblue;
    }
    td{
        border: 1px solid;
    }
</style>

<table>
    <thead>
        <tr>
            <th></th>
            <th>info</th>
        </tr>
    </thead>
    <tbody>
        <form asp-controller="Shop" asp-action="EditTicket" method="post">
        <tr>
            <td>Name</td>
            <td>@Html.DisplayFor(model => model.Name )</td>
        </tr><tr>
            <td>Email</td>
            <td>@(Html.DisplayFor(model => model.Email ))</td>
        </tr><tr>
            <td>>Address</td>
            <td>@(Html.DisplayFor(model => model.Address ))</td>
        </tr><tr>
            <td>Country</td>
            <td>@(Html.DisplayFor(model => model.Country.Name ))</td>
        </tr><tr>
            <td>Race</td>
            <td>@(Html.DisplayFor(model => model.Race.Name ))</td>
        </tr><tr>
            <td>Number</td>
            <td>@(Html.DisplayFor(model => model.Number ))</td>
        </tr>
            <tr>
                <td><input asp-for="Paid" type="checkbox" />
                    <label asp-for="Paid">
                        @(Html.DisplayNameFor(model => model.Paid))
                    </label>
                </td>
                <td><input type="submit" value="Register" /></td>
            </tr>
            <input type="hidden" asp-for="TicketID" />
        </form>

    </tbody>
</table>


